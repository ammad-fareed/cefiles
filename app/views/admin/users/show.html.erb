<div class="content-page-holder container">
  <div class="products-inner">
    <div class="products-header">
      <h1>User Profile</h1>
      <div class="">
        <%=link_to "Edit",edit_admin_user_path(@user),class:"btn btn-primary action-btn" %>
        <% if can? :archive, @user %>
          <%=link_to_archive_user @user %>
        <% end %>

      </div>
    </div>
    <div class="card card-show">

      <div class="card-body">
        <div class="row mb-4">
          <div class="col-md-6 list-lbl">
            Name
          </div>
          <div class="col-md-6 list-val"><%=@user.display_name %></div>
        </div>
        <div class="row mb-4">
          <div class="col-md-6 list-lbl">Email</div>
          <div class="col-md-6 list-val"><%=@user.email %></div>
        </div>
        <div class="row mb-4">
          <div class="col-md-6 list-lbl">Company</div>
          <div class="col-md-6 list-val"><%= @user.company %></div>
        </div>
        <div class="row mb-4">
          <div class="col-md-6 list-lbl">Administrator?</div>
          <div class="col-md-6 list-val"><%=@user.admin? %></div>
        </div>
        <div class="row mb-4">
          <div class="col-md-6 list-lbl">Archived?</div>
          <div class="col-md-6 list-val"><%=@user.archived? %></div>
        </div>

      </div>
    </div>


  </div>
</div>
