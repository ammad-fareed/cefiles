<div class="nested-fields">
  <%= f.hidden_field :_destroy, value: true, class: "address-delete-field-checkbox", disabled: true unless f.object.new_record? %>
  <div class="form-rows">
    <%= f.input :name,error:"Required field",input_html:{class:"input-field"} %>
  </div>
  <div class="form-rows">
    <%= f.input :email,input_html:{class:"input-field"} %>
  </div>
  <div class="form-rows">
    <%= f.input :phone,input_html:{class:"input-field"} %>
  </div>
  <%f.object.address || f.object.build_address %>
  <%=f.simple_fields_for :address do |address| %>
    <div class="form-rows">
      <%= address.input :address_line_1 ,input_html:{class:"input-field"},label:"Address" %>
    </div>
    <div class="product-cols">
      <div class="row">
        <div class="col-md-6">
          <div class="form-rows">
            <%= address.input :city ,input_html:{class:"input-field"},label:"City" %>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-rows">
            <%= address.input :state ,input_html:{class:"input-field"},label:"State/Province/Region" %>
          </div>
        </div>
      </div>
      <div class="row ">
        <div class="col-md-6">
          <div class="form-rows">
            <%= address.input :postal_code ,input_html:{class:"input-field"},label:"ZIP/Postal Code" %>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-rows">
            <%= address.input :country_id, as: :select,error:"Required field", required: true, collection: Country.pluck(:name,:id) %>
          </div>
        </div>
      </div>
      <div class="form-rows remove-sales-rep-link">
        <%= link_to_remove_association "Remove Sales Representative", f  %>
      </div>
    </div>
  <%end %>
</div>