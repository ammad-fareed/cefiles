
<div class="content-page-holder reset-password">
  <div class="container">
    <h1>Forgot your password?</h1>
    <div class="form-holder">
      <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name),html: { method: :post }) do |f| %>
        <%#= render "devise/shared/error_messages", resource: resource %>
        <div class="form-rows">
          <%=f.input :email,autofocus: true, autocomplete: "email" , label:"Email",input_html:{class:"input-field"} %>
        </div>
        <div class="submit-row">
          <%=f.submit value:"Send me reset password instructions",class:"submit-btn",data:{disable_with:"Sending..."} %>
        </div>
      <%end %>
      <div class="links-row">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>


